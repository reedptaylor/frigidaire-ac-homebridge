    "eslint": "^8.57.0",
    "homebridge": "^1.8.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@samthegeek/frigidaire": "^3.0.0",
    "patch-package": "^8.0.0"
